{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
    },
    "include": [
        "src/**/*.ts",
        "./*.ts",
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}